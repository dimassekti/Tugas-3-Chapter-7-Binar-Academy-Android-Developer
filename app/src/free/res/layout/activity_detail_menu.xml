<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.DetailMenuActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:src="@mipmap/ic_launcher"
                android:layout_gravity="center"
                android:id="@+id/iv_gambarmenu"
                android:scaleType="fitXY"
                android:layout_margin="30dp"
                android:layout_width="150dp"
                android:layout_height="150dp"/>

            <TextView
                android:text="Nama"
                android:id="@+id/tv_namamenu"
                android:layout_gravity="center"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="release date"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:id="@+id/tv_menuharga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/iv_addfavfilm"
                android:layout_gravity="center"
                android:visibility="gone"
                android:src="@drawable/icons8_love_48"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="synopsis"
                android:layout_margin="20dp"
                android:justificationMode="inter_word"
                android:id="@+id/tv_menudeskripsi"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



        </LinearLayout>

    </ScrollView>



</RelativeLayout>